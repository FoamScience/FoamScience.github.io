html,
body
	height 100%


$bg
	background main
	height 100%
	.content
		width 95%
		align(both)
		text-align center

// Header home
.header-site
	@extends $bg
	li
		margin 0
		list-style-type none
	.person
		img
			size(130, 130)
			border-radius 100%
	.recent
		+below(320px)
			&:last-child
				display none
		center(550px)
			
		p
			text-align center
			color white
		a
			text-decoration none
			h2
				text-align left
				margin rem(10px)
				font-weight 500
				font-size rem(17px)
				border-bottom 2px solid rgb(109, 190, 202)
				&:hover
					background rgba(135,116,169,0.42)
	h1,h2
		color: sec
		text-align center
	.site-title
		font-size rem(35px)
		line-height 1
		display block
		font-variant-ligatures none 
		letter-spacing 9px
		+above(cut)
			letter-spacing 16px
			margin-bottom 0
			font-size rem(20px)
	.site-description
		font-size rem(20px)
		display block
		margin rem(30px) 0
		+above(cut)
			font-size rem(40px)

// Header Post
.header-post
	@extends $bg
	height 62px
	+above(rem(1450px))
		background transparent
		#open
			position fixed
			background transparent
	p
		margin 0
		padding-top 23px
		text-align center
		color sec
		
//Header Page
.page-header
	@extends $bg
	height 62px
	h1
		text-align center
		text-transform uppercase
		font-size rem(30px)
		margin 0 0 30px
		padding-top 10px
		color sec
		font-weight 300
		+above(cut)
			font-size rem(30px)
